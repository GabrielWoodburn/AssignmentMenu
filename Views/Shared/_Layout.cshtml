<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AssignmentMenuWoodburn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AssignmentMenuWoodburn</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<div class="btn-group">
						<a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						<a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

						<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Assignments</button>
						<div class="dropdown-menu">
							<a class="nav-link text-dark" asp-area="" asp-controller="Assignment6_1" asp-action="Assignment6_1" asp-route-id="1">Assignment 6.1</a>
							<div class="dropdown-divider"></div>
							<a asp-area="" asp-controller="Home" asp-action="Index" class="dropdown-item">Home</a>
						</div>
					</div>
				</div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - AssignmentMenuWoodburn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
